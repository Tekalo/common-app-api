{
  "name": "common-app-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "pnpm check && swc src --copy-files --out-dir build",
    "start": "node --es-module-specifier-resolution=node ./build/server.js",
    "dev": "nodemon -e ts --exec \"pnpm build && pnpm start\"",
    "debug": "nodemon -e ts --exec \"pnpm build:debug && pnpm start:debug\"",
    "build:debug": "pnpm check && swc src --source-maps true --copy-files --out-dir build",
    "start:debug": "node --es-module-specifier-resolution=node --inspect=0.0.0.0:9229 ./build/server.js | pino-pretty -c",
    "container-install": "./scripts/container-install.sh",
    "format": "./scripts/prettier.sh",
    "lint": "./scripts/container-lint.sh",
    "lint:fix": "./scripts/lint-fix.sh",
    "preinstall": "npx only-allow pnpm",
    "test": "./scripts/container-test.sh",
    "prepare": "husky install",
    "prisma:update": "docker compose run --rm api npx prisma db push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schmidtfutures/common-app-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/schmidtfutures/common-app-api/issues"
  },
  "homepage": "https://github.com/schmidtfutures/common-app-api#readme",
  "dependencies": {
    "@prisma/client": "4.11.0",
    "@tsconfig/node18": "1.0.1",
    "@types/auth0": "2.35.11",
    "auth0": "3.2.0",
    "express": "4.18.2",
    "husky": "8.0.3",
    "jest-mock-extended": "^3.0.3",
    "swagger-ui-express": "4.6.2",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.40",
    "@swc/jest": "0.2.24",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.1",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "eslint": "8.36.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-markdownlint": "0.4.1",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "nodemon": "2.0.21",
    "pino-pretty": "10.0.0",
    "prettier": "2.8.4",
    "prisma": "4.11.0",
    "supertest": "6.3.3",
    "typescript": "4.9.5"
  },
  "prisma": {
    "schema": "db/prisma/schema.prisma"
  }
}
