{
  "name": "common-app-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "npm run check && swc src --copy-files --out-dir build",
    "start": "node --es-module-specifier-resolution=node ./build/server.js",
    "dev": "nodemon -e ts --exec \"npm run build && npm run start\"",
    "debug": "nodemon -e ts --exec \"npm run build:debug && npm run start:debug\"",
    "build:debug": "npm run check && swc src --source-maps true --copy-files --out-dir build",
    "start:debug": "node --es-module-specifier-resolution=node --inspect=0.0.0.0:9229 ./build/server.js | pino-pretty -c",
    "container-install": "docker compose run --no-deps --rm api npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schmidtfutures/common-app-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/schmidtfutures/common-app-api/issues"
  },
  "homepage": "https://github.com/schmidtfutures/common-app-api#readme",
  "dependencies": {
    "@tsconfig/node18": "1.0.1",
    "express": "4.18.2"
  },
  "devDependencies": {
    "@swc/cli": "0.1.61",
    "@swc/core": "1.3.32",
    "@types/express": "4.17.16",
    "typescript": "4.9.5",
    "nodemon": "2.0.20",
    "pino-pretty": "9.1.1"
  }
}
