{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabled": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automergeType": "branch",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor"],
      "automergeType": "branch",
      "automerge": true,
      "matchCurrentVersion": "!/^0./"
    }
  ]
}
