{
  "openapi": "3.0.0",
  "info": {
    "title": "Common App API",
    "description": "Documentation for Common App REST API endpoints",
    "version": "1.0.1"
  },
  "paths": {
    "/health": {
      "get": {
        "description": "Gets health status",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "healthy": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/applicants": {
      "post": {
        "description": "Create a new applicant",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/applicantRequestBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "auth0Id": {
                      "type": "boolean",
                      "nullable": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/opportunities/batch": {
      "post": {
        "description": "Create a new opportunity",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/opportunitiesRequestBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/opportunitiesResponseBody"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "applicantRequestBody": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "preferredContact": {
            "type": "string"
          },
          "acceptedTCVersion": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "opportunitiesResponseBody": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "contactName": {
            "type": "string"
          },
          "contactEmail": {
            "type": "string"
          },
          "contactPhone": {
            "type": "string"
          },
          "orgName": {
            "type": "string"
          },
          "orgSize": {
            "type": "string"
          },
          "orgType": {
            "type": "string"
          },
          "impactAreas": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "opportunitiesRequestBody": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "contact": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "phone": {
                "type": "string"
              }
            }
          },
          "organization": {
            "type": "object",
            "properties": {
              "impactAreas": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "name": {
                "type": "string"
              },
              "size": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            }
          },
          "submissions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fullTime": {
                  "type": "boolean"
                },
                "location": {
                  "type": "string"
                },
                "paid": {
                  "type": "boolean"
                },
                "pitchEssay": {
                  "type": "string"
                },
                "source": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
