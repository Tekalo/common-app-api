{
  "openapi": "3.0.0",
  "info": {
    "title": "Common App API",
    "description": "Documentation for Common App REST API endpoints",
    "version": "1.0.1"
  },
  "paths": {
    "/health": {
      "get": {
        "description": "Gets health status",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "healthy": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/appliants": {
      "post": {
        "description": "Create a new applicant",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "auth0Id": {
                      "type": "string",
                      "nullable": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
